<AnchorPane prefHeight="419.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.AddEvenementController">
    <children>
        <Label text="Titre:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="20.0" />
        <TextField fx:id="titreField" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0" />

        <Label text="Date de début:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="80.0" />
        <DatePicker fx:id="dateDebutPicker" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="100.0" />

        <Label text="Date de fin:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="140.0" />
        <DatePicker fx:id="dateFinPicker" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="160.0" />

        <Label text="Thème:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="200.0" />
        <ComboBox fx:id="themeComboBox" layoutX="11.0" layoutY="220.0" promptText="Veulillez choisir le thème" AnchorPane.leftAnchor="11.0" AnchorPane.rightAnchor="9.0" AnchorPane.topAnchor="220.0" />

        <Label text="Localisation:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="260.0" />
