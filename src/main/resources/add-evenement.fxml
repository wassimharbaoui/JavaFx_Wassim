        <Label text="Description:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="320.0" />
        <TextField fx:id="descriptionField" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="340.0" />

        <HBox layoutX="10.0" layoutY="373.0" prefHeight="40.0" prefWidth="340.0" spacing="15" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="373.0">
            <children>
                <Button onAction="#handleSave" text="Enregistrer" />
                <Button onAction="#handleCancel" text="Annuler" />
            </children>
        </HBox>
    </children>
</AnchorPane>
